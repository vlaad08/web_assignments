{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@uno/shared/*": ["../shared/src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "../shared/src"]
}